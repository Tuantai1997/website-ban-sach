@model PagedList.IPagedList<Model.EF.BookCategory>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sách danh mục
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "BookCategory", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.searchString" class="form-control" name="searchString" />

                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success"> Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/BookCategory/Create">Thêm mới</a>

                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Tên danh mục</th>
                                <th>Ngày lập</th>
                                <th>Thẻ Title</th>
                                <th>Ngày Update</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Item in Model)
                            {
                                <tr id="row_@Item.ID">

                                    <td>@Item.Name</td>
                                    <td>@Item.CreateDate</td>
                                    <td>@Item.MetaTitle</td>
                                    <td>@Item.ModifiedDate</td>
                                    <td>@Item.status</td>
                                    @*<td><a href="#" class="btn-active" data-id="@Item.ID">@(Item.status ? "Kích hoạt" : "Khóa")</a></td>*@

                                    <td>
                                        <button class="btn btn-warning"><a href="/Admin/BookCategory/Edit/@Item.ID">Sửa</a></button>
                                        
                                        <a>|</a>
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = Item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa bản ghi này không?",
                                   OnComplete = "$('#row_" + @Item.ID + "').remove()",
                                   HttpMethod = "Delete"

                               }, new {@class="btn btn-danger" })

                                    </td>
                                </tr>


                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { Page, @SearchString = ViewBag.searchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
