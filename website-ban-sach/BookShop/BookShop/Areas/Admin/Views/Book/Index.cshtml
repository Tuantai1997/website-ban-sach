@model PagedList.IPagedList<Model.EF.Book>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thông tin sách
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Book", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.searchString" class="form-control" name="searchString" />

                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success"> Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/Book/Create">Thêm mới</a>

                            </div>
                        </div>
                    </div>
                }

                <div style="" class="table-responsive">
                    <table class="table table-striped table-bordered ">
                        <thead>
                            <tr>

                                <th>Tên Sách</th>
                                <th>Hình ảnh</th>
                                <th>Giá sách</th>
                                <th>Số lượng</th>
                                <th>Thể loại</th>
                                <th>Tác giả</th>
                                <th>NXB</th>
                                <th>Mô tả</th>
                                <th>Ngày lập</th>
                                <th>Top hot</th>

                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Item in Model)
                            {
                                <tr id="row_@Item.ID">

                                    <td>@Item.Name</td>
                                    <td><a><img height="100" src="@Item.Images" /></a></td>
                                    <td>@Item.Price</td>
                                    <td>@Item.Quantity</td>
                                    <td>@Html.DisplayFor(modelItem=> Item.BookCategory.Name)</td>
                                    <td>@Html.DisplayFor(modelItem=>Item.Author.Name)</td>
                                    <td>@Html.DisplayFor(modelItem=>Item.Producer.Name)</td>
                                    <td>@Item.Discriptions</td>
                                    <td>@Item.CreateDate</td>
                                    <td>@Item.TopHot</td>
                                    <td>
                                        <button class="btn btn-warning"><a href="/Admin/Book/Edit/@Item.ID">Sửa</a></button>
                                        <a>|</a>
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = Item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa bản ghi này không?",
                                   OnComplete = "$('#row_" + @Item.ID + "').remove()",
                                   HttpMethod = "Delete"

                               }, new { @class = "btn btn-danger" })

                                    </td>
                                </tr>


                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new{page, @SearchString = ViewBag.searchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

