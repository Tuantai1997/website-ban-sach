@model Model.EF.BookCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thêm mới danh mục
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Create", "BookCategory", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    <div id="tab1" class="tabcontent">

                        <div class="form">

                            <div class="form_row">
                                <label>Tên danh mục:</label>
                                <input type="text" class="form_input" name="Name" id="Name" value="" />
                                @*<div class="error">@ViewBag.msg_err</div>*@
                                <span>
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "error" })
                                </span>

                            </div>
                            
                            <div class="form_row">
                                <label>Thẻ title:</label>
                                <input type="number" min="0" class="form_input" name="MetaTitile" id="MetaTitle" value="" />
                                <span>@Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "error" })</span>
                            </div>

                            <div class="form_row">
                                <label>Ngày lập:</label>
                                <input type="datetime" min="0" class="form_input" name="CreateDate" id="CreateDate" value="" />
                                <span>@Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "error" })</span>
                            </div>

                            <div class="form_row">
                                <label>Trạng thái:</label>
                                <input type="number" min="0" max="1" class="form_input" name="status" id="status" value="" />
                                <span>@Html.ValidationMessageFor(model => model.status, "", new { @class = "error" })</span>
                            </div>

                            <div class="form_row">
                                <label>Post Trang chủ:</label>
                                <input type="number" min="0" max="1" class="form_input" name="ShowOnHome" id="ShowOnHome" value="" />
                                <span>@Html.ValidationMessageFor(model => model.ShowOnHome, "", new { @class = "error" })</span>
                            </div>


                            <div id="btn-submit">
                                <input type="submit" class="form_submit" value="Thêm" />
                            </div>

                            <div class="clear"></div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>